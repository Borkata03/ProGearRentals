@using Microsoft.AspNetCore.Identity
@using ProGearRentals.Infrastructure.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@{
    string username = string.Empty;
    if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.FindByIdAsync(User.Id());
        username = $"{user.FirstName} {user.LastName}";
    }
}

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title ="Manage">Hello @username!   </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area=""  asp-controller="Home" asp-action="Index" title="Back">Back</a>
        </li>



    }
else
{
    <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
