@model EquipmentServiceModel
@inject IAgentService agentservice
@inject IEquipmentService equipmentservice

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Equipment Image">
        <div class="card-body text-center">
            <h4>@Model.Title</h4>
            <h6>
                Price Per Month:
                <b>@String.Format("{0:f2}", Model.PricePerMonth) BGN</b>
            </h6>
            <h6>(@(Model.IsRented ? "Rented" : "Not Rented"))</h6>
            <br />
            <a asp-controller="Equipment" asp-action="Details" asp-route-id="@Model.Id"
               asp-route-information="@Model.GetInformation()" class ="btn btn-dark">Details</a>
            @if (this.User.Identity.IsAuthenticated)
            {
                @if (await equipmentservice.HasAgentWithIdAsync(Model.Id,User.Id()))
                {
                    <a asp-controller="Equipment" asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-dark">Edit</a>
                    <a asp-controller="Equipment" asp-action="Delete" asp-route-id="@Model.Id"
               class="btn btn-dark">Delete</a>
                }
              
                <p></p>
                @if (!Model.IsRented && (await agentservice.ExistByIdAsync(User.Id())) == false)
                {
                    
                        <form class="input-group-sm" asp-controller="Equipment"
                  asp-action="Rent" asp-route-id="@Model.Id" method="post">
                            <input class="btn btn-dark" type="submit" value="Rent" />
                        </form>
                    
                   
                }
                else if (await equipmentservice.IsRentedByUserWithIdAsync(Model.Id, User.Id()))
                {
                   
                        <form asp-controller="Equipment" asp-action="Leave"
                         asp-route-id="@Model.Id" method="post">
                            <input class="btn btn-dark" type="submit" value="Leave" />
                        </form>
                    
                  
                }
                
               
            }
        </div>
    </div>
</div>
